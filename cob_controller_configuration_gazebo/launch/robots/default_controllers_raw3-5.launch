<?xml version="1.0"?>
<launch>

	<arg name="robot" default="raw3-5"/>

	<!-- robot state publisher -->
	<node ns="base" pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
		<param name="publish_frequency" type="double" value="50.0" />
		<param name="tf_prefix" type="string" value="" />
	</node>

	<!-- Base -->
	<include file="$(find cob_controller_configuration_gazebo)/launch/components/base_controller_plugin.launch">
		<arg name="robot" value="$(arg robot)"/>
	</include>
	<include file="$(find cob_controller_configuration_gazebo)/launch/components/base_scan_filter.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="where" value="front"/>
	</include>
	<include file="$(find cob_controller_configuration_gazebo)/launch/components/base_scan_filter.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="where" value="rear"/>
	</include>
	
	<include file="$(find cob_bringup)/drivers/relayboard.launch">
		<arg name="sim" value="true"/>
	</include>

	<!-- start additional components -->
	<include file="$(find cob_sound)/ros/launch/sound.launch" />
	<include file="$(find cob_bringup)/tools/base_collision_observer.launch" >
		<arg name="robot" value="raw3-5"/>
	</include>

</launch>
